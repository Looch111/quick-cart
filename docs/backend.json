
{
  "entities": {
    "user": {
      "title": "User",
      "description": "A user of the application",
      "type": "object",
      "properties": {
        "uid": {
          "type": "string",
          "description": "The user's unique ID from Firebase Auth."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "displayName": {
          "type": "string",
          "description": "The user's display name."
        },
        "photoURL": {
          "type": "string",
          "format": "uri",
          "description": "URL of the user's profile picture."
        },
        "role": {
          "type": "string",
          "enum": ["buyer", "seller", "admin"],
          "description": "The role of the user."
        },
        "isNewUser": {
            "type": "boolean",
            "description": "Flag to determine if the user is new and needs to see the onboarding tour."
        },
        "cartItems": {
            "type": "object",
            "description": "A map of product IDs to quantities in the user's cart."
        },
        "wishlistItems": {
            "type": "object",
            "description": "A map of product IDs in the user's wishlist."
        },
        "purchasedProducts": {
          "type": "array",
          "items": { "type": "string" },
          "description": "An array of product IDs that the user has purchased."
        },
        "walletBalance": {
          "type": "number",
          "description": "The user's current spending wallet balance."
        },
        "walletTransactions": {
            "type": "array",
            "description": "An array of spending wallet transaction objects.",
            "items": {
                "type": "object",
                "properties": {
                    "id": { "type": "string" },
                    "type": { "type": "string", "enum": ["Top Up", "Payment", "Refund"] },
                    "amount": { "type": "number" },
                    "date": { "type": "string", "format": "date-time" }
                }
            }
        },
        "sellerWallet": {
            "type": "object",
            "description": "The user's wallet for seller earnings.",
            "properties": {
                "balance": { "type": "number" },
                "transactions": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "id": { "type": "string" },
                            "type": { "type": "string", "enum": ["Withdrawal", "Sale", "Reversal"] },
                            "date": { "type": "string", "format": "date-time" },
                            "orderId": { "type": "string" },
                            "grossSale": { "type": "number" },
                            "commission": { "type": "number" },
                            "netEarnings": { "type": "number" },
                            "amount": { "type": "number" }
                        }
                    }
                },
                "bankDetails": {
                    "type": "object",
                    "properties": {
                        "accountHolder": { "type": "string" },
                        "accountNumber": { "type": "string" },
                        "bankName": { "type": "string" },
                        "ifscCode": { "type": "string" }
                    }
                }
            }
        }
      },
      "required": ["uid", "email", "role"]
    },
    "product": {
      "title": "Product",
      "description": "An item available for sale in the store.",
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "description": { "type": "string" },
        "brand": { "type": "string" },
        "color": { "type": "string" },
        "price": { "type": "number", "description": "The original price of the product." },
        "offerPrice": { "type": "number", "description": "The standard discounted price." },
        "flashSalePrice": { "type": "number", "description": "A special, deeper discount price for a limited time." },
        "image": { "type": "array", "items": { "type": "string", "format": "uri" } },
        "category": { "type": "string" },
        "stock": { "type": "number" },
        "sizes": {
          "type": "object",
          "description": "A map of available sizes to their stock quantity.",
          "additionalProperties": { "type": "number" }
        },
        "deliveryInfo": { "type": "string", "description": "Information about product delivery timeframes, e.g., '2-3 business days'." },
        "userId": { "type": "string", "description": "The UID of the seller who owns this product." },
        "flashSaleEndDate": { "type": "string", "format": "date-time", "description": "The date and time when the flash sale ends." },
        "status": {
          "type": "string",
          "enum": ["pending", "approved", "rejected"],
          "description": "The approval status of the product."
        },
        "averageRating": { "type": "number" },
        "reviewCount": { "type": "number" }
      },
      "required": ["name", "price", "offerPrice", "image", "category", "stock", "userId", "status"]
    },
    "review": {
      "title": "Review",
      "description": "A product review from a user.",
      "type": "object",
      "properties": {
          "userId": { "type": "string" },
          "userName": { "type": "string" },
          "userPhotoURL": { "type": "string", "format": "uri" },
          "rating": { "type": "number" },
          "comment": { "type": "string" },
          "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["userId", "userName", "rating", "comment", "createdAt"]
    },
    "order": {
      "title": "Order",
      "description": "An order placed by a user.",
      "type": "object",
      "properties": {
        "userId": { "type": "string" },
        "items": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "_id": { "type": "string" },
              "name": { "type": "string" },
              "offerPrice": { "type": "number" },
              "image": { "type": "array", "items": { "type": "string", "format": "uri" } },
              "quantity": { "type": "number" },
              "sellerId": { "type": "string", "description": "The UID of the seller for this item." },
              "status": { "type": "string", "enum": ["Processing", "Shipped", "Delivered", "Completed", "Disputed"], "description": "The status of this specific item." }
            }
          }
        },
        "amount": { "type": "number" },
        "address": { "$ref": "#/entities/address" },
        "status": { "type": "string", "enum": ["pending", "failed", "Order Placed", "Processing", "Partially Shipped", "Shipped", "Delivered", "Completed", "Disputed"], "description": "The overall status of the entire order." },
        "date": { "type": "string", "format": "date-time" },
        "paymentMethod": { "type": "string", "enum": ["wallet", "flutterwave"] },
        "dispute": {
            "type": "object",
            "properties": {
                "reason": { "type": "string" },
                "date": { "type": "string", "format": "date-time" }
            }
        },
        "autoCompletionDate": { "type": "string", "format": "date-time" },
        "payoutProcessed": { "type": "boolean", "description": "Flag to prevent double payouts." }
      },
      "required": ["userId", "items", "amount", "address", "status", "date"]
    },
    "address": {
      "title": "Address",
      "description": "A shipping address for a user.",
      "type": "object",
      "properties": {
        "userId": { "type": "string" },
        "fullName": { "type": "string" },
        "phoneNumber": { "type": "string" },
        "hall": { 
            "type": "string",
            "enum": ["Hall 1", "Hall 2", "Hall 3", "Hall 4", "Hall 5", "Hall 6", "Hall 7", "Hall 8"]
        },
        "roomNumber": { "type": "string" }
      },
      "required": ["userId", "fullName", "phoneNumber", "hall", "roomNumber"]
    },
    "banner": {
        "title": "Banner",
        "description": "A promotional banner displayed on the site.",
        "type": "object",
        "properties": {
            "title": { "type": "string" },
            "description": { "type": "string" },
            "offerText": { "type": "string" },
            "image": { "type": "string", "format": "uri" },
            "link": { "type": "string" },
            "status": { "type": "string", "enum": ["active", "inactive"] },
            "buttonText": { "type": "string" },
            "secondaryButtonText": { "type": "string" },
            "secondaryLink": { "type": "string" }
        },
        "required": ["title", "image", "link", "status"]
    },
    "promotion": {
        "title": "Promotion",
        "description": "A discount or promotional code.",
        "type": "object",
        "properties": {
            "code": { "type": "string" },
            "type": { "type": "string", "enum": ["percentage", "fixed", "shipping"] },
            "value": { "type": "number" },
            "expiryDate": { "type": "string", "format": "date" },
            "status": { "type": "string", "enum": ["active", "inactive"] }
        },
        "required": ["code", "type", "value", "expiryDate", "status"]
    },
    "settings": {
      "title": "Platform Settings",
      "description": "Platform-wide settings like commission and shipping fees.",
      "type": "object",
      "properties": {
        "commission": { "type": "number" },
        "shippingFee": { "type": "number" },
        "freeShippingThreshold": { "type": "number" },
        "confirmationWindowHours": { "type": "number", "description": "Number of hours a buyer has to confirm delivery before auto-completion." },
        "contactEmail": { "type": "string" },
        "contactPhone": { "type": "string" }
      }
    },
    "notification": {
        "title": "Notification",
        "description": "A notification for a user.",
        "type": "object",
        "properties": {
            "userId": { "type": "string" },
            "message": { "type": "string" },
            "link": { "type": "string" },
            "read": { "type": "boolean" },
            "createdAt": { "type": "string", "format": "date-time" }
        },
        "required": ["userId", "message", "read", "createdAt"]
    },
    "conversation": {
        "title": "Conversation",
        "description": "A chat conversation between a user and admins.",
        "type": "object",
        "properties": {
          "userId": { "type": "string" },
          "userName": { "type": "string" },
          "lastMessage": { "type": "string" },
          "lastMessageAt": { "type": "string", "format": "date-time" },
          "userUnread": { "type": "boolean" },
          "adminUnread": { "type": "boolean" }
        }
    },
    "message": {
        "title": "Message",
        "description": "A single chat message.",
        "type": "object",
        "properties": {
            "text": { "type": "string" },
            "senderId": { "type": "string" },
            "senderName": { "type": "string" },
            "senderRole": { "type": "string", "enum": ["user", "admin"] },
            "createdAt": { "type": "string", "format": "date-time" }
        },
        "required": ["text", "senderId", "createdAt"]
    }
  },
  "auth": {
    "providers": ["google.com", "password"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": { "$ref": "#/entities/user" },
      "description": "Stores public profiles for all users."
    },
    "/products/{productId}": {
      "schema": { "$ref": "#/entities/product" },
      "description": "Stores all products available in the store."
    },
     "/products/{productId}/reviews/{reviewId}": {
      "schema": { "$ref": "#/entities/review" },
      "description": "Stores reviews for a specific product."
    },
    "/orders/{orderId}": {
      "schema": { "$ref": "#/entities/order" },
      "description": "Stores all orders placed by users."
    },
    "/users/{userId}/addresses/{addressId}": {
        "schema": { "$ref": "#/entities/address" },
        "description": "Stores shipping addresses for a specific user."
    },
    "/banners/{bannerId}": {
        "schema": { "$ref": "#/entities/banner" },
        "description": "Stores promotional banners for the website."
    },
    "/promotions/{promotionId}": {
        "schema": { "$ref": "#/entities/promotion" },
        "description": "Stores promotional codes and discounts."
    },
    "/settings/platform": {
        "schema": { "$ref": "#/entities/settings" },
        "description": "Stores global platform settings."
    },
    "/users/{userId}/notifications/{notificationId}": {
        "schema": { "$ref": "#/entities/notification" },
        "description": "Stores notifications for a specific user."
    },
    "/conversations/{userId}": {
        "schema": { "$ref": "#/entities/conversation" },
        "description": "Stores a chat conversation between a user and admins."
    },
    "/conversations/{userId}/messages/{messageId}": {
        "schema": { "$ref": "#/entities/message" },
        "description": "Stores individual messages within a conversation."
    }
  }
}
